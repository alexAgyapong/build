<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Platforms>AnyCPU</Platforms>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Artur Mustafin (hack2root)</Authors>
    <Company>Artur Mustafin (hack2root)</Company>
    <Description>.NET Core 2.1 Dependency Injection framework</Description>
    <Copyright>Artur Mustafin (hack2root)</Copyright>
    <PackageLicenseUrl>https://github.com/hack2root/build/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://hack2root.github.io/build/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hack2root/build.git</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>Dependency Injection</PackageTags>
    <PackageReleaseNotes>Features:
- Added runtime default checks to avoid System.MissingMethodException and System.Reflection.AmbiguousMatchException</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageId>dependency_injection_build</PackageId>
    <Version>1.0.0.12</Version>
    <AssemblyVersion>1.0.0.12</AssemblyVersion>
    <FileVersion>1.0.0.12</FileVersion>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
    <SignAssembly>false</SignAssembly>
    <DelaySign>false</DelaySign>
    <AssemblyOriginatorKeyFile>Build.pfx</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".msbump" />
    <None Remove="Settings.StyleCop" />
    <None Remove="StyleCop.Cache" />
    <None Remove="stylecop.json" />
  </ItemGroup>

</Project>
